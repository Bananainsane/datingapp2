@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="flex flex-col h-screen">
    <!-- Top Navigation -->
    <div class="top-row px-4 sticky top-0 z-10 bg-white shadow-md">
        <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
    </div>

    <!-- Main Content -->
    <article class="flex-grow overflow-auto">
        @Body
    </article>

    <!-- Include NavMenu if not on Signin or Signup pages -->
    @if (!Navigation.Uri.EndsWith("/signin") && !Navigation.Uri.EndsWith("/signup"))
    {
        <NavMenu />
    }
</div>
